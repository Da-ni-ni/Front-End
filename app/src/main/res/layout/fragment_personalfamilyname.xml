<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_paper"
    tools:context="main_oper_except_emotion.ui.name.PersonalFamilyNameFragment">

    <!-- 툴바 -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_Emotion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:title="가족명 변경"
        app:navigationIcon="@drawable/ic_left_arrow"
        app:titleTextAppearance="@style/Toolbar_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 이미지 -->
    <ImageView
        android:id="@+id/default_emotion"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="85dp"
        android:src="@drawable/ic_joy"

        app:layout_constraintTop_toBottomOf="@id/toolbar_Emotion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <TextView
        android:id="@+id/tv_original_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="기존 이름"

        style="@style/Very_small_logo"
        app:layout_constraintTop_toBottomOf="@id/default_emotion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <!-- 이름 입력 필드 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_constraint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/default_emotion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/et_new_group_name"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:padding="12dp"
            android:hint="가족명"
            android:inputType="text"
            android:layout_marginTop="50dp"
            android:textSize="18dp"
            android:background="@drawable/selector_invite_link_edit_text"
            android:textAppearance="@style/Edit_Title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 확인 버튼 -->
    <Button
        android:id="@+id/bt_next"
        style="@style/Button_Title"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="15dp"
        android:text="확 인"
        android:background="@drawable/button_background_intro"
        app:layout_constraintTop_toBottomOf="@id/cl_constraint"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>