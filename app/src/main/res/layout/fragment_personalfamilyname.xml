<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray0"
    tools:context="main_oper_except_emotion.ui.name.PersonalFamilyNameFragment">

    <!-- 툴바 -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_Emotion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:title="가족 별명 짓기"
        app:titleCentered="true"
        app:navigationIcon="@drawable/ic_left_arrow"
        app:titleTextAppearance="@style/Toolbar_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 이미지 -->
    <ImageView
        android:id="@+id/iv_default_emotion"
        android:layout_width="300dp"
        android:layout_height="280dp"
        android:layout_marginTop="70dp"
        android:src="@drawable/ic_joy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_Emotion" />

    <TextView
        android:id="@+id/tv_caption_nickname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/Caption_title"
        android:text="가족 닉네임"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf ="@+id/iv_default_emotion"/>



    <EditText
            android:id="@+id/et_new_name"
            android:layout_width="380dp"
            android:layout_height="45dp"
            android:hint="   가족의 닉네임을 정해주세요!"
            android:inputType="text"
            android:layout_marginTop="10dp"
            android:background="@drawable/selector_invite_link_edit_text"
            android:textAppearance="@style/Edit_Title"
            app:layout_constraintTop_toBottomOf="@+id/tv_caption_nickname"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_original_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="기존명"
        android:layout_marginStart="20dp"
        android:textAppearance="@style/Explain_detail_gray2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_new_name"/>


    <!-- 확인 버튼 -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_next"
        style="@style/Button_Title"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="15dp"
        android:text="닉네임 변경"
        android:background="@drawable/button_background_intro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_new_name"/>

</androidx.constraintlayout.widget.ConstraintLayout>