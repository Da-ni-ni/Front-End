                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="어머니"
                style="@style/Answer_author"
                app:layout_constraintStart_toStartOf="@+id/otherAnswerSection1"
                app:layout_constraintTop_toTopOf="@id/otherAnswerSection1"

                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tv_OtherAnswer1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="..."
                style="@style/Answer_author"
                app:layout_constraintStart_toStartOf="@+id/otherAnswerSection1"
                app:layout_constraintTop_toBottomOf="@id/tv_OtherName1"/>


