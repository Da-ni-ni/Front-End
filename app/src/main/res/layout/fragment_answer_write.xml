<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/gray0"
    tools:context="main_oper_except_emotion.ui.question.AnswerWriteFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigationIcon="@drawable/ic_left_arrow"
        app:title="일일 문답"
        app:titleCentered="true"
        app:titleTextAppearance="@style/Toolbar_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    </com.google.android.material.appbar.MaterialToolbar>

        <View
            android:id="@+id/separator1"
            android:layout_width="380dp"
            android:layout_height="0.5dp"
            android:layout_marginTop="20dp"
            android:background="@color/gray1"
            app:layout_constraintTop_toBottomOf="@id/toolbar_question"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_danini"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="다니니"
        android:fontFamily="@font/someone"
        android:textSize="26dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/separator1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/ic_danini"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_danini"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_danini"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_daily_question"
        style="@style/Top_black_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="# 가장 소중한 추억은 무엇인가요?"
        android:fontFamily="@font/someone"
        android:textSize="28dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ic_danini"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/tv_count_answer"
        android:text="3번째 질문  5월 11일"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/someone"
        android:textSize="21dp"
        android:layout_marginStart="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_daily_question"/>

    <EditText
        android:id="@+id/et_myanswer"
        style="@style/Top_black_right"
        android:layout_width="0dp"
        android:layout_height="130dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/back_paper"
        android:gravity="start"
        android:hint="답변을 입력해주세요"
        android:textSize="26dp"
        android:importantForAutofill="no"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@+id/tv_count_answer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="제출"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_button"
        android:fontFamily="@font/someone"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toBottomOf="@+id/et_myanswer"
        app:layout_constraintEnd_toStartOf="@+id/btn_delete"/>


    <Button
        android:id="@+id/btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="삭제"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_button"
        android:fontFamily="@font/someone"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toBottomOf="@+id/et_myanswer"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>



